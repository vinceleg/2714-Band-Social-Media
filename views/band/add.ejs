<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>	

<% if (messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>

<style>

	td{
		color:white;
	}
</style>

<form action="/bands/add" method="post" name="form1">
	<table width="25%" border="0">
		<tr> 
			<td>Band Name</td>
			<td><input type="text" name="name" id="name" value="<%= name %>" /></td>
		</tr>
		<tr> 
			<td>Number_of Members</td>
			<td><input type="text" name="number_of_members" value="<%= number_of_members %>" /></td>
		</tr>
		<tr> 
			<td>Music Genre</td>
			<td><input type="text" name="music_genre" value="<%= music_genre %>" /></td>
		</tr>
		<tr> 
			<td></td>
			<td><input type="submit" name="Submit" value="Add" /></td>
		</tr>
	</table>
</form>

